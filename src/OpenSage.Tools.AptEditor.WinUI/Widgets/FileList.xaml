<DockPanel x:Class="OpenSage.Tools.AptEditor.WinUI.Widgets.FileList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenSage.Tools.AptEditor.WinUI.Widgets"
        mc:Ignorable="d" d:DesignWidth="229.5" d:DesignHeight="158.5"
        HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch" 
               Height="Auto" 
               Margin="0" 
               UseLayoutRounding="False">
    <TextBox Name="PathTextBox" 
             Text="{Binding Path}" 
             TextChanged="RefreshList"
             DockPanel.Dock="Top"></TextBox>
    <ListBox Name="List" 
             HorizontalContentAlignment="Stretch">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding ShortPath}" Foreground="Black"/>
                    <TextBlock Text="{Binding FullPath}" Foreground="Gray"/>
                    <Grid.InputBindings>
                        <MouseBinding MouseAction="LeftDoubleClick"
                                      Command="{Binding OpenFile}">
                            
                        </MouseBinding>
                    </Grid.InputBindings>
                </Grid>
                
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</DockPanel>
